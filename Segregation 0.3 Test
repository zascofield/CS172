import org.junit.jupiter.api.Test;

import static org.junit.jupiter.api.Assertions.*;
class SegregationTest {

    @Test
    void initGrid() {

        int[][] grid = {
                {0, 0, 0},
                {0, 0, 0},
                {0, 0, 0}
        };
        Segregation.initGrid(grid);
        StdArrayIO.print(grid);
    }

    @Test
    void drawGrid() {

        int[][] grid = {
                {1, 2, 0},
                {1, 2, 0},
                {1, 0, 2}
        };
        StdDraw.setXscale(0, grid.length);
        StdDraw.setYscale(0, grid.length);

        Segregation.drawGrid(grid);
        StdArrayIO.print(grid);

    }

    @Test
    void checkSquareFalse() {
        int[][] grid = {
                {2, 2, 1},
                {2, 1, 1},
                {2, 2, 0}
        };
        assertFalse(Segregation.checkSquare(grid, 1, 1));
    }

    @Test
    void checkSquareTrue() {
        int[][] grid = {
                {2, 1, 0},
                {1, 1, 1},
                {2, 1, 0}
        };
        assertTrue(Segregation.checkSquare(grid, 1,  1));
    }
}
